# =====================================================
# Configuración de Base de Datos
# =====================================================
DATABASE_URL=jdbc:postgresql://localhost:5432/terrenos_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# =====================================================
# Configuración de JWT
# =====================================================
# IMPORTANTE: Cambiar este secreto en producción (mínimo 256 bits)
JWT_SECRET=your-secret-key-change-this-in-production-must-be-at-least-256-bits-long-for-security
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# =====================================================
# Configuración de CORS
# =====================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =====================================================
# Spring Profile
# =====================================================
SPRING_PROFILES_ACTIVE=dev

